<%= render 'layouts/errors', obj: @newbike %>

<div class="row">
	<div class="col-xs-offset-3"><h2 class="title col-xs-3">投稿画面</h2></div>
</div><br>

<div class="postform">
<%= form_for(@newbike) do |f| %>
<div class="row">
	<div class="postimage">
            <%= f.attachment_field :image, class: "col-xs-offset-2"%><br>

		<div class="field">
			<%= f.text_area :title, placeholder: "タイトル", size: "50x10" %>
		</div><br>

		<div class="check_box">
			<p>タグ</p>
			<%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_name) do |t| %>
				<div>
				<%= t.label do %>
				<%= t.check_box %>
				<%= t.text %>
				<% end %>
				</div>
			<% end %>
		</div>
		<br>

		<div class="actions">
			<%= f.submit "投稿", class: "btn btn-primary col-xs-4 col-xs-offset-4" %>
		</div>
	</div>
</div>
<% end %>
</div>