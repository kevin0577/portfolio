<% if bike.bookmark_by?(current_user) %>
	<%= link_to bike_bookmarks_path(bike),method: :delete, remote: true do %>
	<span class="glyphicon glyphicon-star" aria-hidden="true">お気に入り解除</span>
	<% end %>
	<% else %>
	<%= link_to bike_bookmarks_path(bike),method: :post, remote: true do %>
	<span class="glyphicon glyphicon-star-empty" aria-hidden="true">お気に入り追加</span>
	<% end %>
<% end %>