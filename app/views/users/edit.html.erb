<div class="useredit">
	<div class="row">
	<div class="col-xs-5 col-xs-offset-2"><h3>ユーザー編集</h3></div>
	</div>

	<div class="row">
	<div class="col-xs-6 col-xs-offset-4" class="">
		<%= form_for (@user) do |f| %>
			<%= attachment_image_tag @user, :profile_image,:fill, 50, 50, fallback: "no_image.jpg"%>
			<%= f.attachment_field :profile_image %>
	</div>
	</div>

	<div class="row">
		<div class="col-xs-6 col-xs-offset-4">
			<%= f.text_field :name, placeholder: "名前" %><br>
			<%= f.text_field :bike_name, placeholder: "バイク種類" %><br>
			<%= f.submit "変更を保存",class: "btn btn-primary " %>
		</div>
		<% end %>
	</div>

</div>