<p id="notice"><%= notice %></p>

<div class="mypage">
<div class="row">
	<div class="col-xs-5 col-xs-offset-2"><h2>マイページ</h2></div>
</div><br>

<div class="row">
	<div class="col-xs-3 col-xs-offset-2">
		<%= image_tag attachment_url(@user, :profile_image, :fill, 100, 100, format: "jpg", fallback: "no_image.jpg") %>
	</div>
</div><br>


<div class="row">
	<div class="col-xs-5 col-xs-offset-2">
		<p>名前:<%= @user.name %></p>
		<p>バイク:<%= @user.bike_name %></p>
	</div>

	<div class="col-xs-offset-1">
		<%= link_to user_follows_path(@user), class: "btn btn-primary" do %>
		フォロー数:<%= @user.follower.count %><br>
		<% end %>
		<%= link_to user_follower_path(@user), class: "btn btn-primary" do %>
		フォロワー数:<%= @user.followed.count %>
		<% end %>
	</div>
</div>

<div class="row">
	<% if @user == current_user %>
		<div class="col-xs-3 col-xs-offset-2">
			<%= link_to "プロフィール編集", edit_user_path, class: "btn btn-primary" %>
		</div>
		<% end %>
</div><br>

<div class="row">
	<div class="col-xs-12">
		<table class="table table-hov" >
			<tbody>
				<% @bikes.each do |b| %>
					<tr>
						<td>
						<div class="img">
							<%= link_to bike_path(b.id) do %>
							<%= image_tag attachment_url(b, :image, :fill, 500, 500, format: "jpg") %>
							<% end %>
						</div>

						<div class="col-xs-offset-2">
							<span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
							<%= b.comments.count %>
							<span class="glyphicon glyphicon-heart" aria-hidden="true">
							</span>
							<%= b.likes.count %>
						</div><br>

						<div class="col-xs-offset-2">
							<h4>タイトル</h4>
							<%= b.title %>
						</div>
						</td>
					</tr>
				<% end %>
				</tbody>
			</table>
			<%= paginate @bikes %>
		</div>
	</div>
</div>
